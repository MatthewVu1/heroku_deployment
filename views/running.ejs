          <div class="item">
            <p>Workout options</p>
            <select>
              <option selected value="" disabled selected></option>
              <option value="course-type" >Benchpress</option>
              <option value="short-courses">Treadmill</option>
              <option value="featured-courses">Eliptical</option>
              <option vlaue="course-type" >Squats</option>
              <option value="course-type" >Shoulder press</option>
              <option value="course-type" >Push-up </option>
              <option value="undergraduate">Side-ways plank</option>
            </select>
          </div>
          <div class="question">
            <label>Workout activity</label>
            <div class="question-answer">
              <div>
                <input type="radio" value="none" id="radio_3" name="Easy"/>
                <label for="radio_3" class="radio"><span>Easy</span></label>
              </div>
              <div>
                <input  type="radio" value="none" id="radio_4" name="Hard"/>
                <label for="radio_4" class="radio"><span>Hard</span></label>
              </div>
            </div>
          </div>
          <form action="https://formspree.io/f/mrgrpdvg" method="post">
            <label for="email">Your Email</label>
            <input name="Email" id="email" type="email">
            <button type="submit">Submit</button>
          </form>
          <form accept="https://formspree.io/f/mrgrpdvg" method="post">
            <label for="message">Message</label>
            <textarea name="textbox" id="notes" class="textbox" rows="4">Message</textarea>
          </form>
      </div>
    </main>
