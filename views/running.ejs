          <div class="item-lift">
            <label for="Lift">Distance Ran/Total Time<span></span></label>
            <input id="Lift" type="number" name="Lift" required/>
          </div>
          <div class="item-Bodyweight">
            <label for="Bodyweight">Weight Lifted<span></span></label>
            <input id="Bodyweight" type="number" name="Bodyweight" required/>
          </div>
          <div class="item-Repetition">
            <label for="Repetition">Repetition<span></span></label>
            <input id="Repetition" type="number" name="Repetition" required/>
          </div>
          <div class="item-goalweight">
            <label for="bdate">Date<span>*</span></label>
            <input id="goalweight" type="date" name="goalweight" required/>
            <i class="fas fa-calendar-alt"></i>
          </div>
          <!-- <div class="question">
            <label>Gender</label>
            <div class="question-answer">
